<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/default_padding"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.linhpham.baseproject.ui.custom.BaseProjectButton
            android:id="@+id/btnLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@mipmap/ic_google"
            android:textColor="@color/black"
            android:title="@string/login_with_google"
            app:backgroundColor="@color/white" />

        <com.linhpham.baseproject.ui.custom.BaseProjectButton
            android:id="@+id/btnLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_thin"
            android:icon="@mipmap/ic_facebook"
            android:textColor="@color/black"
            android:title="@string/login_with_facebook"
            app:backgroundColor="@color/white" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
